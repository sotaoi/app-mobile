{
  "compilerOptions": {
    "target": "ES6",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "isolatedModules": true,
    "noEmitOnError": true,
    "jsx": "react",
    "paths": {
      "@app/client/*": ["../app-client/*"],
      "@app/mobile/*": ["./*"],
      "@app/omni/*": ["../app-omni/*"],
      "@sotaoi/client/*": ["../packages/sotaoi-client"],
      "@sotaoi/omni/*": ["../packages/sotaoi-omni"]
    }
  },
  "include": ["./lib/**/*"]
}
